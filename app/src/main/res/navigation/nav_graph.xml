<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/companiesList">
    <fragment
        android:id="@+id/firstFragment"
        android:name="com.example.myapp.FirstFragment"
        android:label="Home page"
        tools:layout="@layout/fragment_first" >
        <action
            android:id="@+id/action_firstFragment_to_secondFragment"
            app:destination="@id/secondFragment" />

    </fragment>
    <fragment
        android:id="@+id/secondFragment"
        android:name="com.example.myapp.SecondFragment"
        android:label="Animation + map"
        tools:layout="@layout/fragment_second" >
        <argument
            android:name="name"
            app:argType="string" />
        <argument
            android:name="company_name"
            app:argType="string" />
        <argument
            android:name="longitude"
            app:argType="string" />
        <argument
            android:name="latitude"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/companiesList"
        android:name="com.example.myapp.PubsClass"
        android:label="fragment_companies_list_list"
        tools:layout="@layout/fragment_pubs_class_list" />
</navigation>